<div class="px-4 py-5 my-5 {var_hero_classes}">
    <div class="w-25 mx-auto">
     <img class="img-fluid mb-4" src="{var_img_src}" alt="{var_img_alt}">
    </div>
    <h1 class="display-3 text-body-emphasis">{var_title}</h1>
    <div class="col-lg-6 mx-auto">
        <p class="lead mb-4">{var_text}</p>
        <div class="d-grid gap-2 d-sm-flex justify-content-sm-center">
            <a href="{var_btn1_href}" class="btn btn-lg px-4 gap-3 {var_btn1_class}">{var_btn1_text}</a>
            <a href="{var_btn2_href}" class="btn btn-lg px-4 gap-3 {var_btn2_class}">{var_btn2_text}</a>
        </div>
    </div>
</div>